    <ImageView
        android:id="@+id/imgNivel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/numero_0" />

    <ImageView
        android:id="@+id/imgNivel0"
        android:layout_width="match_parent"
